<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>
      <hr style="border-style: solid; border-color: rgb(27, 27, 27); border-width: 1px;"> 

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Name: </label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Name:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="contactTextField">Contact: </label>
          <input
            type="text"
            class="form-control"
            id="contactTextField"
            placeholder="Enter the Contact:"
            name="contact"
            required
          />
        </div>

        <div class="from-group">
          <label for="emailTextField">Email id: </label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter the Email id:"
            name="email"
            required
          />
        </div>
<br>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/business-contact" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
