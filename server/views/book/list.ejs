<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
<br>
<h2>Business Contacts</h2>
<hr style="border-style: solid; border-color: rgb(27, 27, 27); border-width: 1px;"> 

  <div class="row">
    <div class="col-md-offset-3 col-md-8">
      <a href="/business-contact/add" class="btn btn-primary" role="button">
      <i class ="fas fa-plus-circle"></i> Add a Contact</a>
      <br><br>
      <table class="table table-bordered table-striped table-hover">
        <!--Header row-->
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Contact</th>
          <th class="text-center">Email id</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>

        <!--Repetable Templet row-->
        <% for (let count=0; count<BookList.length; count++){%>
          <tr>
            <td class="text-centre "><%=BookList[count].name %></td>
            <td class="text-centre "><%=BookList[count].contact %></td>
            <td class="text-centre "><%=BookList[count].email %></td>
            <td class="text-center col-1">
              <a href="/business-contact/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
              <i class="fas fa-pencil-alt"></i> Edit</a>
          </td>
          <td class="text-center col-1">
              <a href="/business-contact/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash-alt"></i> Delete</a>
          </td>
          </tr>
        <%}%>
      </table>
    </div>
  </div>
  </div>
</main>

<br><br><br><br><br>

